{
    "manifest_version": 2,

    "name": "Format",
    "description": "Format allows you to format text in a variety of ways anywhere you type. Format also detects any available markdown tags that a website allows in its form data and places them just one click away!",
    "version": "0.0.1",

    "permissions": [
        "<all_urls>",
        "tabs",
        "contextMenus",
        "clipboardWrite",
        "clipboardRead"
    ],  

    "background": {
        "page": "background.html",
        "persistent":false
    },   
    
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js": ["broadcast.js"] 
        },
        {
            "matches":["<all_urls>"],
            "js":["replace.js"],
            "all_frames":true      
        }
    ],

    "icons":{
        "16": "icons/pencil16.png",
        "20": "icons/pencil20.png",
        "24": "icons/pencil24.png",
        "32": "icons/pencil32.png",
        "48": "icons/pencil48.png",
        "64": "icons/pencil64.png",
        "128": "icons/pencil128.png",
        "256": "icons/pencil256.png",
        "512": "icons/pencil512.png"

    }
}
